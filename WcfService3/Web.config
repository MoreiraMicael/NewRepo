<?xml version="1.0"?>
<configuration>

  <appSettings>
    <add key="aspnet:UseTaskFriendlySynchronizationContext" value="true" />
  </appSettings>
  <system.web>
    <compilation debug="true" targetFramework="4.0" />
  </system.web>

  <!-- For SOAP help page navigate to http://[address]:[port]/ServiceBooktore.svc -->
  <!-- For REST help page navigate to http://[address]:[port]/ServiceBookstore.svc/rest/help -->

  <system.serviceModel>
    <services>
      <service name="BookstoreWebservice.ServiceBookstore"
      behaviorConfiguration="MyServiceTypeBehaviors">
        <endpoint address="soap" binding="basicHttpBinding"
        contract="BookstoreWebservice.IServiceBookstore" />
        <endpoint address="rest" binding="webHttpBinding" behaviorConfiguration="web"
        contract="BookstoreWebservice.IServiceBookstore" />
        <endpoint contract="IMetadataExchange" binding="mexHttpBinding" address="mex" />
      </service>
    </services>
    <behaviors>
      <serviceBehaviors>
        <behavior name="MyServiceTypeBehaviors">
          <serviceDebug includeExceptionDetailInFaults="true" />
          <serviceMetadata httpGetEnabled="true" />
        </behavior>
      </serviceBehaviors>
      <endpointBehaviors>
        <behavior name="web">
          <webHttp automaticFormatSelectionEnabled="true" faultExceptionEnabled="true"
          helpEnabled="true"/>
        </behavior>
      </endpointBehaviors>
    </behaviors>
    <serviceHostingEnvironment multipleSiteBindingsEnabled="true" />
  </system.serviceModel>
  <system.webServer>
    <modules runAllManagedModulesForAllRequests="true" />
  </system.webServer>
</configuration>